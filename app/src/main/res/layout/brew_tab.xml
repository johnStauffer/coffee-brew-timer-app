<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.jstauffer.bloomcoffeeassistant.ui.widget.CustomImgBtn
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:id="@+id/aeropressBtn"
        android:textColor="#FFFFFF"
        android:text="Aeropress"
        android:textSize="40dp"
        android:background="@drawable/aeropress5"/>

    <com.example.jstauffer.bloomcoffeeassistant.ui.widget.CustomImgBtn
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:id="@+id/pouroverBtn"
        android:text="Pourover"
        android:textSize="40dp"
        android:background="@drawable/chemex5"/>

    <com.example.jstauffer.bloomcoffeeassistant.ui.widget.CustomImgBtn
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:id="@+id/frenchPressBtn"
        android:text="FrenchPress"
        android:textSize="40dp"
        android:background="@drawable/french_press6"/>
</LinearLayout>